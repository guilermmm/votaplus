<%- model_class=Eleitor -%>

<% remote ||= remote %>

<% if can? :edit, eleitor -%>
    <%= link_to edit_admin_eleitor_path(eleitor), :class=> 'btn btn-warning me-2', :remote => remote do %>
        <i class="bi bi-pencil"></i> Editar
    <% end %>
<% end %>

<% if can? :destroy, eleitor -%>
    <%= button_to admin_eleitor_path(eleitor), :remote=> remote,
        :method => 'delete',
        :data => { :confirm => "Tem certeza que deseja remover?"},
        :class => 'btn btn-danger me-2' do %>
        <i class="bi bi-eraser"></i> Remover
    <% end %>
<% end %>

<% if can? :new, Eleitor -%>
    <%= link_to new_admin_eleitor_path, class: "btn btn-primary me-2" do %>
        <i class="bi bi-plus"></i> Adicionar 
    <% end %>
<% end %>