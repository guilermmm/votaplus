<%- model_class=Bairro -%>

<% remote ||= remote %>

<% if can? :edit, bairro -%>
    <%= link_to edit_admin_bairro_path(bairro), :class=> 'btn btn-warning me-2', :remote => remote do %>
        <i class="bi bi-pencil"></i> Editar
    <% end %>
<% end %>

<% if can? :destroy, bairro -%>
    <%= button_to admin_bairro_path(bairro), :remote=> remote,
        :method => 'delete',
        :data => { :confirm => "Tem certeza que deseja remover?"},
        :class => 'btn btn-danger me-2' do %>
        <i class="bi bi-eraser"></i> Remover
    <% end %>
<% end %>

<% if can? :new, Bairro -%>
    <%= link_to new_admin_bairro_path, class: "btn btn-primary me-2" do %>
        <i class="bi bi-plus"></i> Adicionar 
    <% end %>
<% end %>